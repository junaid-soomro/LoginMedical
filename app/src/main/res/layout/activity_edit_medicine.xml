<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dark.login_medical.Pharmacist.edit_medicine">

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Company"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="112dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Medicine Name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="197dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Medicine MG"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="279dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:textColor="@color/crop__button_bar"
        android:background="@color/fbutton_color_peter_river"
        android:id="@+id/Edit_MEDICINE"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Medicine"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="409dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Medicine"
        android:textColor="@color/app_edit_text_cursor"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="26dp" />
</android.support.constraint.ConstraintLayout>
